<h1>Lista de Productos</h1>
 <%= link_to 'Nuevo producto', new_producto_path, class: "btn btn-success btn-xs" %>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<table class="table table-striped table-bordered">
		  <tr>
		    <th class="text-center">Nombre</th>
		    <th class="text-center">Marca</th>
		    <th class="text-center">Descripcion</th>
		    <th class="text-center">Precio</th>
		     <th class="text-center">Acciones</th>
		  </tr>
		 
		  <% @producto.each do |producto| %>   
		    <tr>
		        <td><%= producto.nombre %></td>
		     	<td><%= producto.marca %></td>
		     	<td><%= producto.descripcion %></td>
		     	<td><%= number_to_currency(producto.precio, :unit => "$") %></td>
		     	<td class="text-center"><%= link_to 'Editar', edit_producto_path(producto), class: "btn btn-success btn-xs" %> <%= link_to 'Eliminar', producto_path(producto),class: "btn btn-danger btn-xs",
		              method: :delete,
		              data: { confirm: 'Estas seguro?' } %></td>
		    </tr>
		  <% end %>
		</table>
		<p> <%=number_to_currency(@total, :unit => "$") %></p>
	</div>
</div>
