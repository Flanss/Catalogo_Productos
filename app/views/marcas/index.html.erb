<h1>Lista de Marcas</h1>
 <%= link_to 'Nueva marca', new_marca_path, class: "btn btn-success btn-xs" %>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<table class="table table-striped table-bordered">
		  <tr>
		    <th class="text-center">Nombre</th>
		    <th class="text-center">Acciones</th>
		  </tr>
		 
		  <% @marca.each do |marca| %>
		    <tr>
		        <td><%= marca.nombre %></td>
		     	<td class="text-center"><%= link_to 'Editar', edit_marca_path(marca), class: "btn btn-success btn-xs" %> <%= link_to 'Eliminar', marca_path(marca),class: "btn btn-danger btn-xs",
		              method: :delete,
		              data: { confirm: 'Estas seguro?' } %></td>
		    </tr>
		  <% end %>
		</table>
	</div>
</div>